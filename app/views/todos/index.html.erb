<div class="container">
	<div class="cabecera row">
		<div class="col-md-9">
			<h1>To Do list </h1>
		</div>
		<div class="col-md-3">
			<%= link_to "Crear ToDo", todos_new_path, :class => "btn btn-success pull-right" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<% @todos.each do |todo| %>
			 <div class="well">
			 	<%= todo.description %>
			 	<div class="pull-right">
			 		<%= link_to 'Show', todo, :class => "btn btn-primary"%>
			 		<%= link_to 'Edit', edit_path(todo), :class => "btn btn-warning"%>
			 		<%= link_to "Delete", todo, method: :delete, :class => "btn btn-danger"  %>
			 		
			 		<% if todo.completed === true %>
			 			<%= link_to "Completed", complete_path(todo), :class => "btn disabled"  %>
			 		<% else %>
			 		  <%= link_to "Completed", complete_path(todo), :class => "btn btn-info"  %>
			 	  <% end %>
			 	</div>
			 </div>
			<% end %>
		</div>
	</div>
</div>




